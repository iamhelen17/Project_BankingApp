	@Override
	public Customer logIn() {
		Customer customer = null;
		try (Connection connection = PostgresqlConnection.getConnection()) {
			String sql = "select u.username, p.pin from bagonationalbank.username u join bagonationalbank.pin p on u.username_id = p.username_id";
			
			PreparedStatement preparedStatement = connection.prepareStatement(sql);
			
			ResultSet resultSet = preparedStatement.executeQuery();
			
			if (resultSet.next()) {
				customer.setUsername(resultSet.getString("username"));
				customer.setPin(resultSet.getString("pin"));
			} else {
				throw new BusinessException("No Customer found with user name: "+username+ " pin: "+pin);
			}
			
		} catch (ClassNotFoundException | SQLException e) {
			log.info(e);    //Take off this line when app is live
			throw new BusinessException("Internal error occurred. Contact Admin!!!")
		}
				
				
		return customer;
	}

